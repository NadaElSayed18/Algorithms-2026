# **** Selection Sort ****
#1-we search for the minimum value , then we swap it with the correct position
#2-We repeat  until the array is sorted

def selection_sort(arr):
    n = len(arr)
    for i in range(n - 1):
        
        min_index = i
        for j in range(i + 1, n):
            #Search for mininmum value
            if arr[j] < arr[min_index]:
                min_index = j
        
        # swap it 
        arr[i], arr[min_index] = arr[min_index], arr[i]
    
    return arr


arr = [1,5,7,6,80]
sorted_array = selection_sort(arr)
print("Sorted Array : ", sorted_array)
