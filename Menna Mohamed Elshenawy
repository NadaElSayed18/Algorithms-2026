def selection_sort(arr):
    # get length for arr
    l = len(arr)
    # write loop from 0 to last element
    for i in range(l - 1):
        r = i
        # write loop from i+1 to last element+1
        for j in range(i + 1, l):
            if arr[j] < arr[r]:
                r = j
        # swap elements
        arr[i], arr[r] = arr[r], arr[i]

# write array want to sort
arr = [8, 88, 4, 72, 1]
selection_sort(arr)
print(arr)
