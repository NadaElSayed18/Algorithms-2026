# تعريف دالة اسمها selection_sort بتستقبل ليست اسمها arr
def selection_sort(arr):
    # بنمشي على كل العناصر ما عدا آخر عنصر
    for i in range(len(arr) - 1):
        # بنفترض إن أقل عنصر هو العنصر الحالي
        min_index = i
        
        # بنبدأ من العنصر اللي بعده ونقارن علشان نلاقي الأصغر
        for j in range(i + 1, len(arr)):
            # لو لقينا عنصر أصغر من اللي افترضناه
            if arr[j] < arr[min_index]:
                # بنحدث مكان العنصر الأصغر
                min_index = j
        
        # بعد ما نخلص المقارنة، بنبدّل مكان العنصر الحالي مع الأصغر
        arr[i], arr[min_index] = arr[min_index], arr[i]

# بنجرب الدالة على ليست معينة
numbers = [64, 25, 12, 22, 11]
selection_sort(numbers)  # بنستدعي الدالة علشان ترتّب الأرقام

# نطبع الليست بعد الترتيب
print("القائمة بعد الترتيب:", numbers)
