
def selection_sort(arr):
    n = len(arr)
    for i in range(n - 1):
        # بنفترض اول عنصر هو الاصغر لحد ما نلاقي اصغر منه 
        min_idx = i
        # بنعمل اللوب دي علشان ندور ع اصغر عنصر 
        for j in range(i + 1, n):
            if arr[j] < arr[min_idx]:
                min_idx = j
                # بمعني لو لقينا عنصر اقل من الي احنا ماسكينه هنبدل الاندكس ب الاندكس بتاعه 
        
        # بعد ما اللوب تخلص بقي معانا اصغير عنصر هنعمل تبديل مع اول عنصر مسكناه
        arr[i], arr[min_idx] = arr[min_idx], arr[i]



arr = [50, 25, 40, 2, -10]    
print("Before Selection Sort")
print(arr)

selection_sort(arr)

print("After Selection Sort")
print(arr)
