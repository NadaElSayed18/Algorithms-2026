# task selection Sort

def selectionSort(arr):
    size=len(arr)
    # بنمشي على كل عنصر في الليست (ماعدا اخر عنصر)
    for i in range(len(arr) - 1):
        # بنفترض إن أول عنصر في الجزء الغير مرتب هو الأصغر
        min_i = i

        # بنقارن العنصر الحالي بباقي العناصر اللي بعده
        for j in range(i + 1, size):
            # لو لقينا عنصر أصغر من الحالي بنحدث مؤشر الأصغر
            if arr[j] < arr[min_i]:
                min_i = j

        # بعد ما نخلص اول اللفة بنبدل بين العنصر الأصغر والعنصر الحالي
        arr[i], arr[min_i] = arr[min_i], arr[i]

    # بنرجع الليست بعد الترتيب
    return arr


# ex
num = [84, 35, 14, 22, 11]
print("un sorted", num)
print("sorted", selectionSort(num))
