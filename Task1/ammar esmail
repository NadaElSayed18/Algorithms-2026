def selection_sort(arr):  
    # تعريف دالة اسمها selection_sort تاخد مصفوفة (قائمة) كـ arr

    n = len(arr)  
    # n هو عدد عناصر المصفوفة

    for i in range(n - 1):  
        # بنلف على كل عنصر في المصفوفة ما عدا آخر عنصر
        # لأن بعد ما نرتب الباقي هيكون الأخير تلقائيًا في مكانه الصحيح

        min_index = i  
        # نفترض إن أصغر عنصر حالياً هو العنصر في المكان i

        for j in range(i + 1, n):  
            # نبدأ نلف من العنصر اللي بعد i لحد آخر المصفوفة
            # علشان ندور على العنصر الأصغر

            if arr[j] < arr[min_index]:  
                # لو لقينا عنصر أصغر من العنصر اللي افترضناه الأصغر
                min_index = j  
                # نحدث مكان (فهرس) أصغر عنصر

        arr[i], arr[min_index] = arr[min_index], arr[i]  
        # بعد ما نخلص اللفة الداخلية
        # نبدّل بين العنصر الحالي (i) والعنصر الأصغر اللي لقيناه

    return arr  
    # نرجّع المصفوفة بعد ما تكون مترتبة بالكامل


# مثال للتجربة
numbers = [64, 25, 12, 22, 11]  
# مصفوفة عشوائية عايزين نرتبها

sorted_numbers = selection_sort(numbers)  
# بنستدعي الدالة علشان ترتب المصفوفة

print("الترتيب النهائي:", sorted_numbers)  
# نطبع النتيجة بعد الترتيب
