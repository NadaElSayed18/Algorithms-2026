    # Task : Selection Sort 

def selection_sort(arr):
  #بنجيب طول المصفوفه
  n = len(arr)

  #هنلف علي كل عناصر المصفوفه
  for i in range (n):
    #هنحدد العنصر الحالي كاصغر عنصر 
    min_idx = i 

    #التكرار علي الجزء الغير مرتب في المصفوفه
    for j in range( i+1 , n):

      if arr[j] < arr [min_idx]:
        #تحديث المؤشر علي اصغر عنصر
        min_idx = j

    #تبديل اصغر عنصر تم الحصول عليه مع العنصر الحالي في الموضع
    arr[i], arr[min_idx] = arr[min_idx] ,arr[i]

  return arr

#Example 
data = [64, 25 ,12, 22, 11]
print(f"القائمة الاصلية : "{data})
sorted_data = selection_sort(data)
print(f"القائمة بعد الترتيب باستخدام Selection Sort: "{sorted_data})
