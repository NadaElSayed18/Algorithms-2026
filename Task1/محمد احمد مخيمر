
def selection_sort(arr):
    # بنمشي على كل العناصر  
    for i in range(len(arr)):
        # بنفترض إن العنصر الحالي هو الأصغر
        min_index = i
        
        # بنقارن العنصر ده بباقي العناصر اللي بعده
        for j in range(i + 1, len(arr)):
            # لو لقينا عنصر أصغر من الحالي
            if arr[j] < arr[min_index]:
                min_index = j  # بنحدّث مكان الأصغر
        
        # بنبدّل بين العنصر الحالي والعنصر الأصغر  
        arr[i], arr[min_index] = arr[min_index], arr[i]
    
    # بنرجّع الليست بعد الترتيب
    return arr


# تجربة الكود
numbers = [64, 25, 12, 22, 11]
print("قبل الترتيب:", numbers)
sorted_numbers = selection_sort(numbers)
print("بعد الترتيب:", sorted_numbers)
