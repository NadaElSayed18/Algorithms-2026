def selection_sort(arr):               # Define a function called selection_sort that takes a list 'arr'
    n = len(arr)                       # Get the length of the list and store it in variable 'n'
    for i in range(n):                 # Outer loop that goes through each element in the list
        min_index = i                  # Assume the current position 'i' holds the smallest element
        for j in range(i + 1, n):      # Inner loop to find the smallest element in the remaining unsorted part
            if arr[j] < arr[min_index]:# If we find an element smaller than the current smallest
                min_index = j          # Update the index of the smallest element
        arr[i], arr[min_index] = arr[min_index], arr[i]  # Swap the current element with the smallest found
    return arr                         # Return the sorted list

arr = [64, 25, 12, 22, 11]             # Define an unsorted list
selection_sort(arr)                    # Call the selection_sort function to sort the list
print(arr)                             # Print the sorted list
