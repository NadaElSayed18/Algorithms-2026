# بنعرف دالة اسمها selection_sort بتاخد ليست كـ input
def selection_sort(arr):
    # بنمشي على كل عنصر في الليست ما عدا آخر عنصر
    for i in range(len(arr) - 1):
        # بنفترض إن العنصر الحالي هو الأصغر
        min_index = i

        # بندور على العنصر الأصغر في الجزء اللي بعد i
        for j in range(i + 1, len(arr)):
            if arr[j] < arr[min_index]:
                # لو لقينا عنصر أصغر بنحدث min_index
                min_index = j

        # بنبدّل العنصر الأصغر مع العنصر الحالي
        arr[i], arr[min_index] = arr[min_index], arr[i]


numbers = [64, 25, 12, 22, 11]
selection_sort(numbers)
print("القائمة بعد الترتيب:", numbers)
