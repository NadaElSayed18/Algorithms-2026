def selection_sort(arr):  # بنعرّف دالة اسمها selection_sort بتستقبل لستة اسمها arr
    for i in range(len(arr)):  # بنستخدم حلقة نمرّ فيها على كل عنصر في اللستة
        x = i  # بنفترض إن العنصر الحالي هو الأصغر
        for j in range(i + 1, len(arr)):  # بنبدأ ندور من اللي بعده لحد آخر اللستة
            if arr[j] < arr[x]:  # لو لقينا عنصر أصغر من اللي عندنا
                x = j  # بنحدّث موقع الأصغر الجديد
        arr[i], arr[x] = arr[x], arr[i]  # بنبدّل بين العنصر الحالي والأصغر
    return arr  # بعد ما نخلص، بنرجّع اللستة بعد ترتيبها

numbers = [64, 25, 12, 22, 11]  # لستة فيها أرقام عايزين نرتبها
sorted_numbers = selection_sort(numbers)  # بنستدعي الدالة ونخزن الناتج
print(sorted_numbers)  # بنطبع اللستة بعد الترتيب
