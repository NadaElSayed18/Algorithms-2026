# Task selection sort
def selection_sort(arr):
    n=len(arr) # بنشوف عدد العناصر 
    for i in range(n): #بعدي علي العناصر اشوف الاصغر
        min=i #بفرض ان الصغير هو الاول
        for j in range(i+1,n): #بشوف الباقي واعمل مقانه
            if arr[j]<arr[min]:
                min=j #في حاله ان فيه عنصر اصغر بحذف مكانه
        arr[i],arr[min]=arr[min],arr[i] #بعدين ببدل المكان بتاعه مع التاني


arr=[55,2,35,6,9,7]
print('array before selection  sort =',arr)
selection_sort(arr)
print( 'array after sorting',arr)
# صلاح خالد صلاح
